%h1 Батлы

= link_to 'Новый батл', new_admin_battle_path

%table
  %thead
    %tr
      %th Имя
      %th Type
      %th Дата начала
      %th Дата окончания
      %th
      %th
      %th

  %tbody
    - battles.each do |battle|
      %tr
        %td= battle.name
        %td= battle.battle_type
        %td= battle.start_at
        %td= battle.finish_at
        %td= link_to 'Show', admin_battle_path(battle)
        %td= link_to 'Edit', edit_admin_battle_path(battle)
        %td= link_to 'Destroy', admin_battle_path(battle), method: :delete, data: { confirm: 'Are you sure?' }
        %td= link_to 'Works', admin_battle_battle_works_path(battle)

%br


