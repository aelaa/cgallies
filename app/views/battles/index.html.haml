.section-row
  - favorites.first.first(4).each do |url|
    .item
      .bg{style: "background-image: url(#{image_url 'cats/' + url})"}
      .info
        .name SpeedSculpt #46
        .meta Vasya Pupkin - 1 place

.battles-albums
