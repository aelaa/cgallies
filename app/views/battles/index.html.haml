- content_for :panel do
  .item.active Все
  .item Текущие
  .item СпидCкульпты
  .item ЛонгБаттлы
  .item КлейБаттлы
  .item ФанЧелленджи

.section-row
  - (1..4).each do |index|
    - if index < 3
      .item{style: "background-image: url(#{image_url 'current/' + index.to_s + '.jpg'})"}
        .info{class: "#{'white' if index == 4}"}
          %p.current Текущий
          %p.name LONG BATTLE
          %p.date
            до
            %span.red окончания
            осталось
    - else
      .item{style: "background-image: url(#{image_url 'current/' + index.to_s + '.jpg'})"}
        .info{class: "#{'white' if index == 4}"}
          %p.current Следующий
          %p.name CLAY BATTLE
          %p.date
            состоится
            %span.red 20.05
            в 18:00

.battles-albums
  - (19..110).to_a.in_groups_of(6).each do |batch|
    .albums-row
      - batch.compact.each do |url|
        .item{style: "background-image: url(#{image_url "albums/#{url}.png"})"}
          .hover-background
          .info
            Speed sculpt
            %span.number #55
          .hover-info
            %p.name Подводное существо
            %p.date.red 13.11.16
